<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10dp"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.Fragment2">

    <TextView
        android:id="@+id/fragmentTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment Two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragmentTwoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:hint="Enter Something"
        app:layout_constraintTop_toBottomOf="@id/fragmentTwo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendToFragmentOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to fragment one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentTwoEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>